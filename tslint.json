{
  "rules": {
    "member-ordering": [true, "variables-before-functions"],
    "no-internal-module": false,
    "prefer-for-of": true,
    "no-var-requires": true,
    "typedef": [true, "parameter", "property-declaration"],
    "unified-signatures": true,

    "forin": true,
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-console": [true, "debug", "info", "log", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-invalid-this": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-unused-new": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check"],
    "typeof-compare": true,
    "use-isnan": true,

    "eofline": false,
    "indent": [true, "spaces"],
    "max-classes-per-file": 2,
    "max-line-length": [true, 140],
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "trailing-comma": [
      true,
      {
        "singleline": "never"
      }
    ],

    "align": [true, "parameters", "statements"],
    "array-type": [true, "array"],
    "class-name": true,
    "comment-format": [true, "check-space"],
    "file-header": [true, "Copyright"],
    "import-spacing": true,
    "interface-name": [true, "always-prefix"],
    "jsdoc-format": true,
    "new-parens": true,
    "one-line": [true, "check-catch", "check-open-brace", "check-whitespace"],
    "semicolon": true,
    "variable-name": [true, "ban-keywords", "allow-leading-underscore"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-typecast"
    ]
  },
  "extends": ["tslint:5.2.0", "tslint-config-prettier"]
}
